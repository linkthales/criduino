<!DOCTYPE html>
<html>
<head>
  <title>CRIduino</title>
  <link href='http://fonts.googleapis.com/css?family='Helvetica' rel='stylesheet' type='text/css' >
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div id="header_wrap">
			<h1><%= link_to "CRIduino", root_path %></h1>
			<% if user_signed_in? %>
				<%= render 'layouts/user_navbar' %>
			<% else %>
				<%= render 'layouts/visitor_navbar' %>
			<% end %>
		</div>
	</header>

  <div id="content">
    <% if notice.present? %>
	  <p id="notice"><%= notice %></p>
	<% end %>
	<% if alert.present? %>
	  <p id="alert"><%= alert %></p>
	<% end %>
	
	<%= yield %>
  </div>
</body>
</html>